
<%- include('partials/_header.ejs') %>

<div class="col-md-5">
  <div class="card">
    <div class="card-body">
      <form action="/update/<%= tarea._id %>" method="POST">
        <div class="form-group">
          <input
            type="text"
            name="title"
            placeholder="titulo aqui"
            class="form-control"
            value="<%=tarea.title%>"
          >
        </div>
        <div class="form-group">
          <textarea
            name="description"
            cols="80"
            class="form-control"
            placeholder="inserta tu texto"
          ><%= tarea.description %></textarea>
        </div>
        <button type="submit" class="btn btn-primary">
          Actualizar
        </button>
      </form>
    </div>
  </div>
</div>

<%- include('partials/_footer.ejs') %>